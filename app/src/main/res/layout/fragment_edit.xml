<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holders"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:subtitle="Sub"


        app:title="AndroidlyToolbar"
        app:titleEnabled="false">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Application"
                android:textColor="#ffffff"
                android:textSize="20dp"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:src="@drawable/ic_action_check" />


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/edittexta"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Name"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_namea"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="enter name                           "
            android:inputType="text"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext2a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="SurName"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_surnamea"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="enter Surname"
            android:inputType="text"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext4a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="School Name"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_schoolnamea"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="SecondarySchoolName             "
            android:inputType="text"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext6a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Grade"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_gradea"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="ssc percentage                             "
            android:inputType="numberDecimal"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext8a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="+2 College Name"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_collegea"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="+2 college name                 "
            android:inputType="text"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext10a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Percentage"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_percentagea"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="+2 percentage                     "
            android:inputType="numberDecimal"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext12a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="University Name"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_universitya"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="B.tech college/universityname    "
            android:inputType="text"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext14a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Percentage"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_percenta"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="B.tech percentage                                  "
            android:inputType="numberDecimal"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext16a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_addressa"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="text"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext20a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Hobbies"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_hobbiesa"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="                "
            android:inputType="text"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext22a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Contact_no"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_contacta"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="phone"
            android:textSize="18sp" />

    </LinearLayout>
